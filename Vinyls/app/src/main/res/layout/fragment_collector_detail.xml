<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FragmentAlbumDetail"
    android:layout_marginTop="60dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:id="@+id/fragmentAlbumDetails">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/collector_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/collector_telephone"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/collector_telephone"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collector_name"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/collector_email"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/collector_email"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collector_telephone"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tvTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/collector_telephone"
        app:layout_constraintTop_toBottomOf="@id/collector_name"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/collector_email"
        app:layout_constraintTop_toBottomOf="@id/collector_telephone"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>